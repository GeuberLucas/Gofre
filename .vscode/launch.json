{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug serviço atual (Gofre)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/services/${input:service}/cmd",
      "cwd": "${workspaceFolder}/backend/services/${input:service}",
      "env": {
        "GO_ENV": "development"
      }
    }
  ],
  "inputs": [
    {
      "id": "service",
      "type": "pickString",
      "description": "Escolha o serviço do Gofre para debugar",
      "options": ["auth", "user", "billing"]
    }
  ]
}
